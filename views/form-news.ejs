<%- include('partials/header.ejs', { pageTitle: 'ExistindoNews | Criar Noticia' , styleSheet: 'form' }) %>

	<main>
		<form action="/news/create/" method="post">
			<h1>Formulário de noticias</h1>
			<div>
				<label for="title">Titulo:</label>
				<input required name="title" type="text" id="title" value="" />
				<span></span>
			</div>
			<div>
				<label for="description">Descrição:</label>
				<textarea required name="description" id="description" placeholder="Subtitulo da noticia"></textarea>
				<span></span>
			</div>
			<div>
				<label for="release">Data de publicação:</label>
				<input required name="release" type="date" id="release" value="" />
				<span></span>
			</div>
			<div>
				<label for="image">Link da imagem:</label>
				<textarea required name="image" id="image" placeholder="Aqui vai o endereço da imagem..." /></textarea>
				<span></span>
			</div>
			<div>
				<label for="link">Link de desvio:</label>
				<textarea required name="link" id="link" placeholder="Aqui vai o endereço de URL da notícia..."></textarea>
				<span></span>
			</div>
			<button type="submit">Criar</button>
	</main>

	<%- include('partials/footer.ejs') %>